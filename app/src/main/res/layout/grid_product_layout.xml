    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:background="@drawable/faded_background_top" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="310dp"
            android:background="@drawable/faded_background_bottom" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/grid_layout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="85dp"
                android:layout_weight="1"
                android:text="#Trending"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/grid_layout_view_all_txt"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:clickable="true"
                android:gravity="end"
                android:background="@drawable/bg_grid_view_product_outline_box"
                android:text="View All"
                android:textColor="#7F7E7E"
                android:textSize="16sp" />

        </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="6dp">
        <GridView
            android:id="@+id/grid_product_layout_gridView"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:background="#EDEDED"
            android:horizontalSpacing="1dp"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="1dp" />
    </androidx.cardview.widget.CardView>
