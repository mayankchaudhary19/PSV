            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottomSheetBackground"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView71"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="12dp"
                    android:text="Add Shipping Address"
                    android:textColor="#232323"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/divider7"
                    android:layout_width="409dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="8dp"
                    android:background="?android:attr/listDivider"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView71" />


                <TextView
                    android:id="@+id/textView69"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:text="Full Name :"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    app:backgroundTint="#464545"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/divider7" />

                <EditText
                    android:id="@+id/nameAdd"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="35dp"
                    android:ems="10"
                    android:hint="First Name  -  Last Name"
                    android:inputType="textPersonName"
                    android:textSize="13sp"
                    android:theme="@style/MyEditTextTheme"
                    app:layout_constraintBottom_toBottomOf="@+id/textView69"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView69" />

                <TextView
                    android:id="@+id/textView70"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center|start"
                    android:text="Contact No. :"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@+id/textView69"
                    app:layout_constraintTop_toBottomOf="@+id/textView69" />

                <EditText
                    android:id="@+id/contactAdd"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:hint="Mobile [10]  -  Landline [8]"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textSize="13sp"
                    android:theme="@style/MyEditTextTheme"
                    app:layout_constraintBottom_toBottomOf="@+id/textView70"
                    app:layout_constraintEnd_toEndOf="@+id/nameAdd"
                    app:layout_constraintStart_toEndOf="@+id/textView69" />


                <TextView
                    android:id="@+id/textView85"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center|start"
                    android:text="Address Line 1 :"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@+id/textView70"
                    app:layout_constraintTop_toBottomOf="@+id/textView70" />

                <TextView
                    android:id="@+id/textView86"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center|start"
                    android:text="Address Line 2 :"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="@+id/textView85"
                    app:layout_constraintTop_toBottomOf="@+id/textView85" />

                <EditText
                    android:id="@+id/addressLine2Add"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:hint="City  -  State  -  Pincode"
                    android:inputType="textPostalAddress"
                    android:textSize="13sp"
                    android:theme="@style/MyEditTextTheme"
                    app:layout_constraintBottom_toBottomOf="@+id/textView86"
                    app:layout_constraintEnd_toEndOf="@+id/addressLine1Add"
                    app:layout_constraintStart_toEndOf="@+id/textView86" />

                <EditText
                    android:id="@+id/addressLine1Add"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:hint="Plot Number  -  Street  -  Locality"
                    android:inputType="textPostalAddress"
                    android:textSize="13sp"
                    android:theme="@style/MyEditTextTheme"
                    app:layout_constraintBottom_toBottomOf="@+id/textView85"
                    app:layout_constraintEnd_toEndOf="@+id/contactAdd"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/textView70" />

                <TextView
                    android:id="@+id/textView88"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center|start"
                    android:text="Additional Info. :"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    app:layout_constraintEnd_toEndOf="@+id/textView86"
                    app:layout_constraintStart_toStartOf="@+id/textView86"
                    app:layout_constraintTop_toBottomOf="@+id/textView86" />

                <LinearLayout
                    android:id="@+id/continueLL"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_add_to_cart_andbuy_now_background"
                    android:elevation="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView88">

<!--                    <LinearLayout-->
