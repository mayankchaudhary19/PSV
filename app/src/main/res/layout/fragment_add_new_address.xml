<!--                    </LinearLayout>-->
                    <TextView
                        android:id="@+id/changeAddress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_black_outline_btn"
                        android:gravity="center"
                        android:paddingBottom="1dp"
                        android:text="Save Address"
                        android:textAllCaps="true"
                        android:textColor="#000000"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/addAddressContinueBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_buy_now_outline_box"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Continue"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <EditText
                    android:id="@+id/additionalInfoAdd"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:ems="10"
                    android:hint="Alternate Number  -  Landmark [Optional] "
                    android:inputType="text"
                    android:textSize="13sp"
                    android:theme="@style/MyEditTextTheme"
                    app:layout_constraintBottom_toBottomOf="@+id/textView88"
                    app:layout_constraintEnd_toEndOf="@+id/addressLine2Add"
                    app:layout_constraintStart_toEndOf="@+id/textView88" />


            </androidx.constraintlayout.widget.ConstraintLayout>
