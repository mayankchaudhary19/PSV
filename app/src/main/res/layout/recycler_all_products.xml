<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"

    android:layout_marginBottom="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#F2F9F9F9"
        app:cardCornerRadius="6dp"
        app:cardElevation="0dp"
        app:contentPadding="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="240dp"
            app:cardCornerRadius="5dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/product_img2"
                    android:layout_width="180dp"
                    android:layout_height="170dp"
                    android:src="@drawable/unknown" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#F2F9F9F9"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/product_name2"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="3dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="Mayank"
                            android:minHeight="20dp"
                            android:textSize="18sp"
                            app:autoSizeMinTextSize="15sp"
                            app:autoSizeTextType="uniform" />

                        <TextView
                            android:id="@+id/product_description2"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="1"
                            android:gravity="top"
                            android:text="cghccukltyi"
                            android:textSize="14sp"
                            app:autoSizeMinTextSize="12sp"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_like" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:background="#F2F9F9F9"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    >

                    <TextView
                        android:id="@+id/product_price2"
                        android:layout_width="170dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:text="Rs 3"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/product_initialPrice2"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="bottom"
                            android:text="Rs 35"
                            android:textSize="14sp"
                             />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.2mm"
                            android:layout_alignStart="@id/product_initialPrice2"
                            android:layout_alignEnd="@id/product_initialPrice2"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="6.5dp"
                            android:background="@android:color/darker_gray" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

</LinearLayout>