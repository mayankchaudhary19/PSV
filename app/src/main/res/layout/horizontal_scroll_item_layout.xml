<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_horizontal_scroll_product_outline_box"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/h_s_product_img"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:padding="2dp"
        android:src="@drawable/sampleproductone"
        android:scaleType="fitCenter"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#FFEFEFEF"
        app:cardCornerRadius="6dp"
        android:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="#FFEFEFEF"
                android:backgroundTint="#FFEFEFEF"
                android:orientation="horizontal"
                android:elevation="0dp">

                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="3dp"
                    android:elevation="0dp"
                    >

                    <TextView
                        android:id="@+id/h_s_product_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:minHeight="14dp"
                        android:text="Lock-Box"
                        android:textStyle="bold"
                        app:autoSizeMaxTextSize="16sp"
                        app:autoSizeMinTextSize="10sp"
                        app:autoSizeTextType="uniform" />

                    <TextView
                        android:id="@+id/h_s_product_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:text="Medium,250g"
                        app:autoSizeMaxTextSize="13sp"
                        app:autoSizeMinTextSize="6sp"
                        app:autoSizeTextType="uniform" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_like" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:paddingBottom="4dp"
                android:elevation="0dp"
                android:orientation="horizontal"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/h_s_product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="₹150/pc"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="12dp"
                    app:autoSizeMinTextSize="6sp"
                    app:autoSizeTextType="uniform" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/h_s_product_initialPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="₹200"
                        android:textSize="11sp"
                        app:autoSizeMaxTextSize="11sp"
                        app:autoSizeMinTextSize="8sp"
                        app:autoSizeTextType="uniform" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.2mm"
                        android:layout_alignStart="@id/h_s_product_initialPrice"
                        android:layout_alignEnd="@id/h_s_product_initialPrice"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="6.5dp"
                        android:background="@android:color/darker_gray" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>